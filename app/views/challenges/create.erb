<h1>New Challenge!</h1>

<form action="/challenges" method="post">
    <div>
        <label for="challenge_name">Challenge Name: </label>
        <input type="text" name="challenge[name]" id="challenge_name"><br>
        <h3>Type: </h3>
        <% @types.each do |type| %>
          <input type="radio" name="type" id="<%= type.name %>" value="<%= type.id %>">
          <label for="<%= type.name %>"><%= type.name %></label><br>
        <% end %>
        <label for="duration">Duration: </label>
        <input type="number" name="challenge[duration]" id="duration"> day(s)<br>
        <label for="start_date">Start Date: </label>
        <input type="date" name="challenge[start_date]" id="start_date"><br>
        <label for="end_date">End Date: </label>
        <input type="date" name="challenge[end_date]" id="end_date">
        <label for="reps">Number of Repetion: </label>
        <input type="number" name="challenge[reps]" id="reps">
        <label for="initial_set">Initial Number of Sets: </label>
        <input type="number" name="sets" id="initial_set">
        <label for="set_increment">Imcrement number of sets by </label>
        <input type="number" name="set_increment" id="set_increment"> daily <br>
    </div>
</form>
<div class="submission">
    <button type="button" id="cancelbtn"><a href="/profile/<%= current_user.username %>">Cancel</a></button>
    <button type="submit" id="signupbtn">Create</button>
</div>